@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h5 style="position: relative;top: 20px;left: 35%;width: fit-content;background: white;">@ViewData["Title"]</h5>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="border border-2 border-secondary" style="padding: 20px">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="fw-bold">Username</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="fw-bold">First name</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="fw-bold">Last name</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" aria-required="true"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="fw-bold">Password</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password"autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="fw-bold">Confirm password</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="fw-bold">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
