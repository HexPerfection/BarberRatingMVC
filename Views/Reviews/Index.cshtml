@model IList<Review>

@{
    ViewData["Title"] = "My Reviews";
}

<h2>My Reviews</h2>

<table class="table">
    <thead>
        <tr>
            <th>Barber Name</th>
            <th>Comment</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Barber.Name</td>
                <td>@review.Content</td>
                <td>@review.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@review.Id" onsubmit="return confirm('Are you sure you want to delete this review?');">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
